# Telegram Bot Configuration
# Get this token from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Security
# Secret key for signing JWT tokens (use a strong random string)
JWT_SECRET=your_jwt_secret_key_here

# Webhook Configuration (for production deployment)
# Your public domain where the bot will receive updates
WEBHOOK_DOMAIN=https://your-app-domain.com

# News API Configuration
# Get your API key from https://newsapi.org
NEWS_API_KEY=your_newsapi_key_here
